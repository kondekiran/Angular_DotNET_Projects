@model IEnumerable<Usersdata>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Usersdata" asp-action="Create" class="btn btn-primary">Create new user</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Age
            </th>
            <th>
                Gender
            </th>
            <th>
                Profession
            </th>
            <th>

            </th>
        
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
               @item.FirstName
            </td>
            <td>
               @item.LastName
            </td>
            <td>
                @item.Age
            </td>
            <td>
                @item.Gender
            </td>
            <td>
                @item.Profession
            </td>
            <td>
                <div class="" role="group">
                    <a asp-controller="Usersdata" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </div>
            </td>
            <td>
                <div role="group">
                    <a asp-controller="Usersdata" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>
            </tr>
        }
        
    </tbody>
</table>
</div>

